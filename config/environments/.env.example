# =============================================================================
# SNOWFLAKE EYECARE ANALYTICS PLATFORM - ENVIRONMENT CONFIGURATION
# =============================================================================

# -----------------------------------------------------------------------------
# SNOWFLAKE CONNECTION SETTINGS
# -----------------------------------------------------------------------------
SNOWFLAKE_ACCOUNT=your-snowflake-account  # e.g., abc12345.us-east-1
SNOWFLAKE_USER=your-username
SNOWFLAKE_PASSWORD=your-password
SNOWFLAKE_ROLE=SYSADMIN  # or custom role
SNOWFLAKE_WAREHOUSE=COMPUTE_WH  # or custom warehouse
SNOWFLAKE_DATABASE=EYECARE_ANALYTICS
SNOWFLAKE_SCHEMA=PUBLIC

# Optional Snowflake settings
SNOWFLAKE_AUTHENTICATOR=snowflake  # or externalbrowser, oauth
SNOWFLAKE_PRIVATE_KEY_PATH=  # for key-pair authentication
SNOWFLAKE_PRIVATE_KEY_PASSPHRASE=

# -----------------------------------------------------------------------------
# SOURCE DATABASE CONNECTION (Your Raw Data)
# -----------------------------------------------------------------------------
SOURCE_DB_TYPE=postgresql  # postgresql, mysql, sqlserver, oracle
SOURCE_DB_HOST=localhost
SOURCE_DB_PORT=5432
SOURCE_DB_NAME=eyecare_db
SOURCE_DB_USER=your-db-user
SOURCE_DB_PASSWORD=your-db-password
SOURCE_DB_SCHEMA=public

# Connection pool settings
SOURCE_DB_POOL_SIZE=5
SOURCE_DB_MAX_OVERFLOW=10
SOURCE_DB_POOL_TIMEOUT=30

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
BATCH_SIZE=1000  # Records per batch for processing
MAX_PARALLEL_JOBS=4  # Parallel processing limit

# -----------------------------------------------------------------------------
# MULTI-TENANT SETTINGS
# -----------------------------------------------------------------------------
DEFAULT_CLIENT_ID=client_001
ENABLE_ROW_LEVEL_SECURITY=true
CLIENT_DATA_ISOLATION=strict  # strict, relaxed

# -----------------------------------------------------------------------------
# ANALYTICS PLATFORM SETTINGS  
# -----------------------------------------------------------------------------
STREAMLIT_SERVER_PORT=8501
DASHBOARD_CACHE_TTL=300  # seconds
ENABLE_AI_FEATURES=true
CORTEX_AI_MODEL=snowflake-arctic  # or mistral-large, llama2-70b-chat

# -----------------------------------------------------------------------------
# DATA PIPELINE SETTINGS
# -----------------------------------------------------------------------------
INGESTION_SCHEDULE=0 */6 * * *  # Every 6 hours (cron format)
ENABLE_CDC=false  # Change Data Capture
CDC_LOG_TABLE=audit_log
RETENTION_DAYS=2555  # 7 years for healthcare compliance

# -----------------------------------------------------------------------------
# SECURITY & COMPLIANCE
# -----------------------------------------------------------------------------
ENABLE_AUDIT_LOGGING=true
ENCRYPT_PII=true
HIPAA_COMPLIANCE_MODE=true
DATA_CLASSIFICATION_LEVEL=CONFIDENTIAL

# -----------------------------------------------------------------------------
# MONITORING & ALERTING
# -----------------------------------------------------------------------------
ENABLE_PERFORMANCE_MONITORING=true
QUERY_TIMEOUT_SECONDS=1800  # 30 minutes
COST_ALERT_THRESHOLD=1000  # Monthly credits
NOTIFICATION_EMAIL=admin@yourcompany.com

# -----------------------------------------------------------------------------
# BACKUP & DISASTER RECOVERY
# -----------------------------------------------------------------------------
ENABLE_AUTO_BACKUP=true
BACKUP_RETENTION_DAYS=90
CROSS_REGION_REPLICATION=false

# -----------------------------------------------------------------------------
# DEVELOPMENT & TESTING
# -----------------------------------------------------------------------------
ENABLE_DEBUG_MODE=false
MOCK_DATA_GENERATION=false
SAMPLE_DATA_SIZE=1000
ENABLE_PROFILING=false

# -----------------------------------------------------------------------------
# EXTERNAL INTEGRATIONS
# -----------------------------------------------------------------------------
# Tableau Server (optional)
TABLEAU_SERVER_URL=
TABLEAU_USERNAME=
TABLEAU_PASSWORD=

# Email notifications (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# Slack notifications (optional)
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#analytics-alerts
